{
	"name": "input-validation-next",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"description": "Simple, lightweight form validation without jQuery",
	"repository": {
		"type": "git",
		"url": "https://github.com/VisualYuki/input-validation-next"
	},
	"homepage": "https://visualyuki.github.io/input-validation-next/",
	"scripts": {
		"dev": "vite --config vite.config.dev.ts",
		"dev:docs": "vitepress dev docs",
		"build": "vite build --config vite.config.prod.ts",
		"build:docs": "vitepress build --outDir ./docdist",
		"bulid:demo": "vite build demo --base https://visualyuki.github.io/input-validation-next/demo/dist/",
		"lint": "npx eslint ./src && tsc --noEmit && vitest run",
		"test": "vitest run",
		"coverage": "vitest run --coverage",
		"prepare": "husky install",
		"types": "typedoc global.d.ts --json out.json"
	},
	"devDependencies": {
		"@testing-library/user-event": "^14.5.1",
		"@types/is-url": "^1.2.32",
		"@typescript-eslint/eslint-plugin": "^6.16.0",
		"@vitest/coverage-v8": "^1.1.1",
		"bootstrap": "^5.3.2",
		"eslint": "^8.56.0",
		"husky": "^8.0.0",
		"jquery": "^3.7.1",
		"jquery-validation": "^1.20.0",
		"jsdom": "^22.1.0",
		"typedoc": "^0.25.7",
		"typescript": "^5.0.2",
		"vite": "^5.0.11",
		"vitepress": "^1.0.0-rc.36",
		"vitest": "^1.1.3"
	},
	"dependencies": {
		"ace-builds": "^1.32.3",
		"is-url": "^1.2.4"
	}
}
